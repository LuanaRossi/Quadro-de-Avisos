<!--Incluir o head-->
<%- include('./partials/head') %> 

  <body>
    <!--Menu-->
    <%- include('./partials/navbar') %>      

    <div class="container">

      <% avisos.forEach(aviso => { %>
        <div class="card shadow mt-4">
          <div class="card-header bg-purple text-white p-4 pl-5 d-flex align-items-center justify-content-between">
            <h2> <%= aviso.titulo %>  </h2>
            <h3 class="lead"> <%= moment(aviso.data).format("DD/MM/YYYY") %>  </h3>
          </div>
  
          <div class="card-body p-5">
            <!--Informações do perfil-->
            <div class="d-flex align-items-center">
              <img src="img/Hange.png" class="img-thumbnail rounded-circle" width="75">
              <div class="ml-2">
                <div class="font-weight-bold">Hange</div>
                <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow(); %>  </div>
              </div>
            </div>
  
            <!--Descrição do aviso-->
            <div class="mt-4">
              <%= aviso.mensagem %> 
            </div>
  
          </div> <!--card-body-->
        </div><!--card-->        
      <% }) %>

    </div><!--container-->
    
    <%- include('./partials/scripts_import')  %> 
  </body>
</html>
